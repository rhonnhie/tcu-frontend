---
import DefaultLayout from '@astro/layouts/default-layout.astro';
import Header from '@astro/components/header.astro';
import { ChatPopUp } from '@react/components/chat-popup';
---

<DefaultLayout title='Taguig City University'>
  <Header />

  <section
    class='h-[700px] lg:h-[700px] text-white relative flex items-center scroll-mt-[7rem]'
    id='home'
  >
    <div
      class="bg-[url('/assets/images/tcu.jpg')] bg-fixed bg-center bg-cover brightness-75 bg-blend-darken w-full h-full absolute left-0 top-0"
    >
    </div>
    <div class='brightness-100 p-4 max-w-screen-lg mx-auto lg:p-0'>
      <h1 class='font-bold text-5xl'>Taguig City University</h1>
      <p class='mt-4 font-bold text-lg drop-shadow-lg'>
        Choose TCU for a dynamic education that prepares you for the challenges
        of the future and fosters a culture of academic well-being
      </p>
    </div>
  </section>
  <section class='p-4 bg-gray-100'>
    <div class='flex flex-col md:flex-row gap-4'>
      <div class='p-4 shadow rounded bg-white lg:w-1/3'>
        <h1 class='font-bold text-3xl mb-4 text-gray-900'>Mission</h1>
        <p class='text-gray-700'>
          To nurture a vibrant culture of academic wellness responsive to the
          challenges of technology and the global community.
        </p>
      </div>
      <div class='p-4 shadow rounded bg-white lg:w-1/3'>
        <h1 class='font-bold text-3xl mb-4 text-gray-900'>Vision</h1>
        <p class='text-gray-700'>
          An eminent center of excellent higher education towards social
          advancement.
        </p>
      </div>
      <div class='p-4 shadow rounded bg-white lg:w-1/3'>
        <h1 class='font-bold text-3xl mb-4 text-gray-900'>Philosophy</h1>
        <p class='text-gray-700'>
          Social transformation for a caring community and an ecologically
          balanced country.
        </p>
      </div>
    </div>
  </section>
  <footer class='bg-blue-950 p-4'>
    <div class=''>
      <p class='text-gray-400'>&copy; 2023</p>
    </div>
  </footer>
  <ChatPopUp client:load />
</DefaultLayout>
