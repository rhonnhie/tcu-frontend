---
interface Props {}
---

<header class='sticky top-0 bg-red-500 z-10 shadow'>
  <div class='flex items-center justify-between'>
    <a class='items-center p-4' href='/'>
      <img
        class='rounded-full'
        width='75'
        height='75'
        src='/assets/images/logo.jpg'
        alt='Logo'
      />
    </a>
    <button
      type='button'
      class='md:hidden mr-4 text-white'
      id='navigation-collapse-button'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='1.5'
        stroke='currentColor'
        class='w-6 h-6'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5'></path>
      </svg>
    </button>
    <nav
      class='p-4 flex-col md:flex-row gap-x-6 gap-y-4 md:items-center md:mr-8 absolute md:static bg-red-500 md:bg-transparent w-full md:w-auto -bottom-[10rem] shadow md:shadow-none rounded-b-lg md:rounded-none hidden md:flex text-slate-800 font-bold'
      id='navigation'
    >
      <a
        class='flex gap-x-2 items-center text-white hover:underline underline-offset-8'
        href='/'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          viewBox='0 0 24 24'
          fill='currentColor'
          class='w-6 h-6'
        >
          <path
            d='M11.47 3.84a.75.75 0 011.06 0l8.69 8.69a.75.75 0 101.06-1.06l-8.689-8.69a2.25 2.25 0 00-3.182 0l-8.69 8.69a.75.75 0 001.061 1.06l8.69-8.69z'
          ></path>
          <path
            d='M12 5.432l8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 01-.75-.75v-4.5a.75.75 0 00-.75-.75h-3a.75.75 0 00-.75.75V21a.75.75 0 01-.75.75H5.625a1.875 1.875 0 01-1.875-1.875v-6.198a2.29 2.29 0 00.091-.086L12 5.43z'
          ></path>
        </svg>
         Home</a
      >
      <a
        class='flex gap-x-2 items-center text-white hover:underline underline-offset-8'
        href='/announcements'
        ><svg
          xmlns='http://www.w3.org/2000/svg'
          viewBox='0 0 24 24'
          fill='currentColor'
          class='w-6 h-6'
        >
          <path
            d='M16.881 4.346A23.112 23.112 0 018.25 6H7.5a5.25 5.25 0 00-.88 10.427 21.593 21.593 0 001.378 3.94c.464 1.004 1.674 1.32 2.582.796l.657-.379c.88-.508 1.165-1.592.772-2.468a17.116 17.116 0 01-.628-1.607c1.918.258 3.76.75 5.5 1.446A21.727 21.727 0 0018 11.25c0-2.413-.393-4.735-1.119-6.904zM18.26 3.74a23.22 23.22 0 011.24 7.51 23.22 23.22 0 01-1.24 7.51c-.055.161-.111.322-.17.482a.75.75 0 101.409.516 24.555 24.555 0 001.415-6.43 2.992 2.992 0 00.836-2.078c0-.806-.319-1.54-.836-2.078a24.65 24.65 0 00-1.415-6.43.75.75 0 10-1.409.516c.059.16.116.321.17.483z'
          ></path>
        </svg>
         Announcements</a
      >
      <a
        class='flex gap-x-2 items-center text-white hover:underline underline-offset-8'
        href='/events'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          viewBox='0 0 24 24'
          fill='currentColor'
          class='w-6 h-6'
        >
          <path
            fill-rule='evenodd'
            d='M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z'
            clip-rule='evenodd'></path>
        </svg>
         Events</a
      >
      <a
        class='flex gap-x-2 items-center text-white hover:underline underline-offset-8'
        href='/courses'
        ><svg
          xmlns='http://www.w3.org/2000/svg'
          viewBox='0 0 24 24'
          fill='currentColor'
          class='w-6 h-6'
        >
          <path
            d='M11.25 4.533A9.707 9.707 0 006 3a9.735 9.735 0 00-3.25.555.75.75 0 00-.5.707v14.25a.75.75 0 001 .707A8.237 8.237 0 016 18.75c1.995 0 3.823.707 5.25 1.886V4.533zM12.75 20.636A8.214 8.214 0 0118 18.75c.966 0 1.89.166 2.75.47a.75.75 0 001-.708V4.262a.75.75 0 00-.5-.707A9.735 9.735 0 0018 3a9.707 9.707 0 00-5.25 1.533v16.103z'
          ></path>
        </svg>
         Courses</a
      >
    </nav>
  </div>
</header>
<script>
  const navigation = document.querySelector('#navigation');
  const navigationCollapseButton = document.querySelector(
    '#navigation-collapse-button',
  );

  navigationCollapseButton?.addEventListener('click', function () {
    navigation?.classList.toggle('hidden');
    navigation?.classList.toggle('flex');
  });
</script>
